<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Income">

    <!-- Display the user's total income -->
    <TextView
        android:id="@+id/incomeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <!-- Input field for monthly income -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/incomeInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter monthly income"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/incomeValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/incomeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/primary_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Input field for savings percentage -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/savingsInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter savings % (e.g., 20)"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/incomeInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/savingsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/primary_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button to update income and savings -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateIncomeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        style="@style/Widget.MaterialComponents.Button"
        app:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/savingsInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Text showing the daily money -->
    <TextView
        android:id="@+id/dailyMoneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Money: $0.00"
        android:textSize="18sp"
        android:textColor="@color/secondary_text"
        app:layout_constraintTop_toBottomOf="@id/updateIncomeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Text showing the spendable money -->
    <TextView
        android:id="@+id/spendableMoneyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spendable Money: $0.00"
        android:textSize="18sp"
        android:textColor="@color/secondary_text"
        app:layout_constraintTop_toBottomOf="@id/dailyMoneyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Input field for expense amount -->
    <Button
        android:id="@+id/undoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo last action"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expenseAmountInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Expense amount"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/spendableMoneyText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/expenseAmountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/primary_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Spinner for expense category -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expenseCategoryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:layout_constraintTop_toBottomOf="@id/expenseAmountInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp">

        <Spinner
            android:id="@+id/expenseCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button to add expense -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addExpenseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Expense"
        style="@style/Widget.MaterialComponents.Button"
        app:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/expenseCategoryLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        android:layout_marginBottom="16dp" />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nav_background"
        app:elevation="8dp"
        app:itemIconTint="@color/nav_item_tint"
        app:itemTextColor="@color/nav_item_tint"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>