<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (dark mode) -->
    <style name="Base.Theme.EXPENSETRACKER" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme colors -->
        <item name="colorPrimary">@color/purple_900</item>
        <item name="colorPrimaryVariant">@color/purple_950</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_900</item>
        <item name="colorSecondaryVariant">@color/teal_950</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/gray_900</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/purple_950</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Window background -->
        <item name="android:windowBackground">@drawable/gradient_background_dark</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_400</item>

        <!-- Material button style -->
        <item name="materialButtonStyle">@style/AppButton</item>
    </style>

    <!-- Custom button style (dark mode) -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/purple_900</item>
    </style>

    <!-- Outlined button style for Sign Up (dark mode) -->
    <style name="AppButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="strokeColor">@color/teal_200</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>